        const role = item.querySelector('.conversation-role')?.textContent.toLowerCase() || '';
        const message = item.querySelector('.conversation-last-message')?.textContent.toLowerCase() || '';

        if (name.includes(searchTerm) || role.includes(searchTerm) || message.includes(searchTerm)) {
