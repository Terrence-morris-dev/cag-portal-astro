---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/NavbarNew.astro';
import MessagingHeader from '../components/messaging/MessagingHeader.astro';
import Footer from '../components/Footer.astro';

// Only show phone mockup and toggle in development mode
const isDev = import.meta.env.DEV;
---

<Layout title="Messaging - Cleared Advisory Group">

  {isDev && (
    <>
      <!-- VIEW TOGGLE SWITCH - DEV ONLY -->
      <div class="view-toggle-container">
        <button id="viewToggle" class="view-toggle-btn">
          <span class="toggle-icon">ðŸ“±</span>
          <span class="toggle-text">Switch to Desktop View</span>
        </button>
      </div>

      <!-- PHONE MOCKUP FRAME - DEV ONLY -->
      <div class="phone-mockup-wrapper" id="phoneMockup">
        <div class="phone-frame">
          <div class="phone-notch"></div>
          <div class="phone-screen">
            <!-- Content will be injected here -->
          </div>
          <div class="phone-home-indicator"></div>
        </div>
      </div>
    </>
  )}

  <div class="desktop-only">
    <Navbar />
    <MessagingHeader />
  </div>

  <!-- Main Messaging App -->
  <section class="messaging-app-section" id="messagingContent">
    <div class="container-fluid">
      <div class="messaging-app">

        <!-- Left Sidebar -->
        <div class="messaging-sidebar">
          <div class="sidebar-search">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" id="searchInput" placeholder="Search messages..." class="search-input">
          </div>

          <nav class="sidebar-nav">
            <a href="#" class="nav-item active">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
              </svg>
              <span>Inbox</span>
              <span class="nav-badge">5</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"/>
                <polygon points="22 2 15 22 11 13 2 9 22 2"/>
              </svg>
              <span>Sent</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
              <span>Starred</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="21 8 21 21 3 21 3 8"/>
                <rect x="1" y="3" width="22" height="5"/>
              </svg>
              <span>Archive</span>
            </a>
          </nav>

          <button class="btn-compose-sidebar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"/>
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            Compose
          </button>
        </div>

        <!-- Conversations List -->
        <div class="conversations-panel">
          <div class="conversations-header">
            <h2>Messages</h2>
            <button class="filter-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
              </svg>
            </button>
          </div>

          <div class="conversations-list">

            <!-- Conversation Item 1 - Active -->
            <div class="conversation-item active">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">BB</div>
                <div class="online-indicator"></div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Brian B</span>
                  <span class="conversation-time">30m ago</span>
                </div>
                <span class="conversation-role">Recruiter - Northrop Grumman</span>
                <p class="conversation-last-message">It's a Senior Cyber Defense Analyst role at Fort Meade, MD with Northrop Grumman.</p>
              </div>
              <div class="conversation-meta">
                <span class="unread-badge">2</span>
                <span class="clearance-badge">TS/SCI</span>
              </div>
            </div>

            <!-- Conversation Item 2 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #f59e0b, #d97706);">T</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Terrence M</span>
                  <span class="conversation-time">2h ago</span>
                </div>
                <span class="conversation-role">CAG Career Consultant</span>
                <p class="conversation-last-message">Perfect! I'll send you a secure payment link to confirm your consultation slot.</p>
              </div>
              <div class="conversation-meta">
                <span class="clearance-badge">Secret</span>
              </div>
            </div>

            <!-- Conversation Item 3 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #10b981, #059669);">MG</div>
                <div class="online-indicator"></div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Manny G</span>
                  <span class="conversation-time">1d ago</span>
                </div>
                <span class="conversation-role">Certification Advisor</span>
                <p class="conversation-last-message">With focused study, you can complete Security+ in 6-8 weeks and CEH in 10-12 weeks.</p>
              </div>
            </div>

            <!-- Conversation Item 4 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">JB</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Johnny B</span>
                  <span class="conversation-time">3d ago</span>
                </div>
                <span class="conversation-role">Cybersecurity Department</span>
                <p class="conversation-last-message">We're seeing attempts from Eastern Europe. I've secured your account.</p>
              </div>
              <div class="conversation-meta">
                <span class="clearance-badge">Security Alert</span>
              </div>
            </div>

            <!-- Conversation Item 5 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #ec4899, #db2777);">S</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Steve</span>
                  <span class="conversation-time">3w ago</span>
                </div>
                <span class="conversation-role">Career Advisor - CAG Advisory</span>
                <p class="conversation-last-message">I've reviewed your resume and have some suggestions.</p>
              </div>
            </div>

          </div>
        </div>

        <!-- Active Conversation -->
        <div class="active-conversation">

          <!-- Conversation Header -->
          <div class="conversation-top-header">
            <div class="conversation-header-info">
              <div class="header-left">
                <div class="header-avatar">
                  <div class="avatar" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">BB</div>
                  <div class="online-indicator"></div>
                </div>
                <div class="header-info">
                  <h3 class="header-name">Brian B</h3>
                </div>
              </div>
            </div>
            <div class="header-actions">
              <button class="action-btn back-btn mobile-only-element" id="btnBack" title="Back to Home">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="15 18 9 12 15 6"/>
                </svg>
              </button>
              <button class="action-btn" id="btnVideoCall" title="Video Call">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="23 7 16 12 23 17 23 7"/>
                  <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
                </svg>
              </button>
              <button class="action-btn" id="btnVoiceCall" title="Voice Call">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </button>
              <button class="action-btn desktop-only-btn" id="btnArchive" title="Archive">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="21 8 21 21 3 21 3 8"/>
                  <rect x="1" y="3" width="22" height="5"/>
                  <line x1="10" y1="12" x2="14" y2="12"/>
                </svg>
              </button>
              <button class="action-btn desktop-only-btn" id="btnSettings" title="Settings">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="1"/>
                  <circle cx="12" cy="5" r="1"/>
                  <circle cx="12" cy="19" r="1"/>
                </svg>
              </button>
              <button class="action-btn mobile-menu-btn" id="btnMobileMenu" title="Menu">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="3" y1="12" x2="21" y2="12"/>
                  <line x1="3" y1="6" x2="21" y2="6"/>
                  <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
              </button>
            </div>
            <p class="header-role-bottom mobile-only-element">Recruiter - Northrop Grumman</p>
          </div>

          <!-- Settings Dropdown Menu -->
          <div class="settings-dropdown" id="settingsDropdown">
            <div class="dropdown-header">
              <h4>Conversation Settings</h4>
            </div>
            <div class="dropdown-menu">
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 15c-1.7 0-3-1.3-3-3s1.3-3 3-3 3 1.3 3 3-1.3 3-3 3z"/>
                  <path d="M19.4 15c-.3-.6-.2-1.4.3-2 .5-.5.7-1.3.3-2l-1-1.7c-.4-.7-1.3-1-2-.6-.7.3-1.4.2-2-.3-.5-.5-.7-1.3-.3-2l.3-.6c.4-.7.2-1.6-.5-2l-1.7-1c-.7-.4-1.6-.2-2 .5-.3.6-1 1-1.7 1-.7 0-1.4-.4-1.7-1-.4-.7-1.3-.9-2-.5l-1.7 1c-.7.4-.9 1.3-.5 2 .3.6.2 1.4-.3 2-.5.5-1.3.7-2 .3-.7-.4-1.6-.2-2 .5l-1 1.7c-.4.7-.2 1.6.5 2 .6.3 1 1 1 1.7 0 .7-.4 1.4-1 1.7-.7.4-.9 1.3-.5 2l1 1.7c.4.7 1.3.9 2 .5.6-.3 1.4-.2 2 .3.5.5.7 1.3.3 2-.4.7-.2 1.6.5 2l1.7 1c.7.4 1.6.2 2-.5.3-.6 1-1 1.7-1 .7 0 1.4.4 1.7 1 .4.7 1.3.9 2 .5l1.7-1c.7-.4.9-1.3.5-2z"/>
                </svg>
                Notification Settings
              </button>
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="3"/>
                  <path d="M12 1v6m0 6v6M5.64 5.64l4.24 4.24m4.24 4.24l4.24 4.24M1 12h6m6 0h6M5.64 18.36l4.24-4.24m4.24-4.24l4.24-4.24"/>
                </svg>
                Block User
              </button>
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3 6 5 6 21 6"/>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                </svg>
                Delete Conversation
              </button>
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="21 8 21 21 3 21 3 8"/>
                  <rect x="1" y="3" width="22" height="5"/>
                </svg>
                Archive Conversation
              </button>
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                </svg>
                Export Chat History
              </button>
              <button class="dropdown-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                  <polyline points="14 2 14 8 20 8"/>
                  <line x1="12" y1="18" x2="12" y2="12"/>
                  <line x1="9" y1="15" x2="15" y2="15"/>
                </svg>
                Report Conversation
              </button>
            </div>
          </div>

          <!-- Messages Area -->
          <div class="messages-area">

            <!-- Date Separator -->
            <div class="date-separator">
              <span>Today</span>
            </div>

            <!-- Message 1 - Received -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">BB</div>
              </div>
              <div class="message-content">
                <div class="message-bubble">
                  <p>Hi! I came across your OSP resume on CAG and I'm very impressed with your TS/SCI clearance and cybersecurity background. We have an immediate opening that matches your profile perfectly.</p>
                </div>
                <span class="message-time">9:18 PM</span>
              </div>
            </div>

            <!-- Message 2 - Sent -->
            <div class="message sent">
              <div class="message-content">
                <div class="message-bubble">
                  <p>Thanks Brian! This is Julian Martinez. I'm definitely interested. Can you tell me more about the position and location?</p>
                </div>
                <div class="message-meta">
                  <span class="message-time">9:46 PM</span>
                  <svg class="read-receipt read" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="6 12 10 16 18 8"/>
                    <polyline points="10 12 14 16 22 8"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Message 3 - Received -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">BB</div>
              </div>
              <div class="message-content">
                <div class="message-bubble">
                  <p>It's a Senior Cyber Defense Analyst role at Fort Meade, MD with Northrop Grumman. $140k-$180k range. Your Security+ and CEH certs align perfectly with our DoD 8570 IAT Level II requirements.</p>
                </div>
                <span class="message-time">10:48 PM</span>
              </div>
            </div>

            <!-- Typing Indicator -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">BB</div>
              </div>
              <div class="message-content">
                <div class="typing-indicator">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              </div>
            </div>

          </div>

          <!-- Message Input -->
          <div class="message-input-area">
            <div class="encryption-badge">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
              End-to-end encrypted
            </div>
            <div class="input-wrapper">
              <button class="input-action-btn" title="Attach file">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                </svg>
              </button>
              <button class="input-action-btn" title="Add emoji">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                  <line x1="9" y1="9" x2="9.01" y2="9"/>
                  <line x1="15" y1="9" x2="15.01" y2="9"/>
                </svg>
              </button>
              <input type="text" id="messageInput" class="message-input" placeholder="Type a message..." />
              <button id="sendButton" class="btn-send">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="22" y1="2" x2="11" y2="13"/>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"/>
                </svg>
                Send
              </button>
            </div>
          </div>

        </div>

      </div>
    </div>
  </section>

  <!-- Compose New Message Modal -->
  <div id="composeModal" class="compose-modal hidden">
    <div class="compose-modal-content">
      <div class="compose-header">
        <h3>New Message</h3>
        <button class="compose-close" id="btnCloseCompose">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>

      <div class="compose-body">
        <div class="compose-field">
          <label>To:</label>
          <select id="composeRecipient" class="compose-select">
            <option value="">Select a contact...</option>
          </select>
        </div>

        <div class="compose-field">
          <label>Message:</label>
          <textarea id="composeMessage" class="compose-textarea" placeholder="Type your message..."></textarea>
        </div>
      </div>

      <div class="compose-footer">
        <button class="btn-cancel" id="btnCancelCompose">Cancel</button>
        <button class="btn-send-compose" id="btnSendCompose">Send Message</button>
      </div>
    </div>
  </div>

  <!-- Video Call Modal (Picture-in-Picture) -->
  <div id="videoCallModal" class="video-call-modal hidden">
    <div class="video-call-window" id="videoCallWindow">
      <!-- Window Header -->
      <div class="video-call-header">
        <div class="call-info">
          <span class="caller-name">Johnny</span>
          <span class="call-status" id="callStatus">Connecting...</span>
        </div>
        <div class="window-controls">
          <button class="window-btn" id="btnMinimize" title="Minimize">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
          </button>
          <button class="window-btn" id="btnMaximize" title="Maximize/Restore">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Video Area -->
      <div class="video-area">
        <!-- Remote Video (Fake - shows gradient with avatar) -->
        <div class="remote-video">
          <div class="video-placeholder">
            <div class="avatar-large" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
              J
            </div>
            <p class="video-placeholder-text">Johnny</p>
          </div>
        </div>

        <!-- Local Video (Your camera - small PIP) -->
        <div class="local-video">
          <div class="video-placeholder-small">
            <div class="avatar-medium" style="background: linear-gradient(135deg, #667eea, #764ba2);">
              YOU
            </div>
          </div>
        </div>

        <!-- Call Timer -->
        <div class="call-timer" id="callTimer">00:00</div>
      </div>

      <!-- Call Controls -->
      <div class="call-controls">
        <button class="call-btn call-btn-mute" id="btnMute" title="Mute">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/>
            <path d="M19 10v2a7 7 0 0 1-14 0v-2"/>
            <line x1="12" y1="19" x2="12" y2="23"/>
            <line x1="8" y1="23" x2="16" y2="23"/>
          </svg>
          <span>Mute</span>
        </button>

        <button class="call-btn call-btn-video" id="btnToggleVideo" title="Turn off camera">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="23 7 16 12 23 17 23 7"/>
            <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
          </svg>
          <span>Camera</span>
        </button>

        <button class="call-btn call-btn-end" id="btnEndCall" title="End call">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>End</span>
        </button>
      </div>
    </div>
  </div>

</Layout>

<!-- Messaging POC Script - Disabled for now (use static UI) -->
<!-- <script src="/js/messaging-poc.js" is:inline></script> -->

<script is:inline>
// Compose Modal & Video Call POC
let callTimer;
let callSeconds = 0;
let isMinimized = false;
let isMaximized = false;
let isDragging = false;
let currentX;
let currentY;
let initialX;
let initialY;
let xOffset = 0;
let yOffset = 0;

document.addEventListener('DOMContentLoaded', function() {

  // VIEW TOGGLE & PHONE MOCKUP - DEV ONLY
  const viewToggle = document.getElementById('viewToggle');
  const phoneMockup = document.getElementById('phoneMockup');
  const phoneScreen = document.querySelector('.phone-screen');
  const messagingContent = document.getElementById('messagingContent');

  // Only run phone mockup code if elements exist (dev mode)
  if (viewToggle && phoneMockup && phoneScreen) {
    const toggleText = viewToggle.querySelector('.toggle-text');
    const toggleIcon = viewToggle.querySelector('.toggle-icon');
