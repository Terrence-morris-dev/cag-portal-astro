---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/NavbarNew.astro';
import MessagingHeader from '../components/messaging/MessagingHeader.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Messaging - Cleared Advisory Group">
  <Navbar />
  <MessagingHeader />

  <!-- Main Messaging App -->
  <section class="messaging-app-section">
    <div class="container-fluid">
      <div class="messaging-app">

        <!-- Left Sidebar -->
        <div class="messaging-sidebar">
          <div class="sidebar-search">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" id="searchInput" placeholder="Search messages..." class="search-input">
          </div>

          <nav class="sidebar-nav">
            <a href="#" class="nav-item active">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
              </svg>
              <span>Inbox</span>
              <span class="nav-badge">5</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"/>
                <polygon points="22 2 15 22 11 13 2 9 22 2"/>
              </svg>
              <span>Sent</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
              <span>Starred</span>
            </a>
            <a href="#" class="nav-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="21 8 21 21 3 21 3 8"/>
                <rect x="1" y="3" width="22" height="5"/>
              </svg>
              <span>Archive</span>
            </a>
          </nav>

          <button class="btn-compose-sidebar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"/>
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            Compose
          </button>
        </div>

        <!-- Conversations List -->
        <div class="conversations-panel">
          <div class="conversations-header">
            <h2>Messages</h2>
            <button class="filter-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
              </svg>
            </button>
          </div>

          <div class="conversations-list">

            <!-- Conversation Item 1 - Active -->
            <div class="conversation-item active">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">SM</div>
                <div class="online-indicator"></div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Sarah Mitchell</span>
                  <span class="conversation-time">30m ago</span>
                </div>
                <span class="conversation-role">HR Manager - Northrop Grumman</span>
                <p class="conversation-last-message">Perfect! How about Thursday at 2pm EST? I'll send you a calendar invite.</p>
              </div>
              <div class="conversation-meta">
                <span class="unread-badge">2</span>
                <span class="clearance-badge">Secret</span>
              </div>
            </div>

            <!-- Conversation Item 2 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #f59e0b, #d97706);">AL</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Amanda Lee</span>
                  <span class="conversation-time">3d ago</span>
                </div>
                <span class="conversation-role">Technical Recruiter - CAG Advisory</span>
                <p class="conversation-last-message">We're looking to fill this position quickly.</p>
              </div>
              <div class="conversation-meta">
                <span class="clearance-badge">Top Secret</span>
              </div>
            </div>

            <!-- Conversation Item 3 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #10b981, #059669);">JC</div>
                <div class="online-indicator"></div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">John Chen</span>
                  <span class="conversation-time">1w ago</span>
                </div>
                <span class="conversation-role">Hiring Manager - General Dynamics</span>
                <p class="conversation-last-message">Great! I'll be in touch soon for the next steps.</p>
              </div>
            </div>

            <!-- Conversation Item 4 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">MW</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">Maria Wilson</span>
                  <span class="conversation-time">2w ago</span>
                </div>
                <span class="conversation-role">Security Officer - Lockheed Martin</span>
                <p class="conversation-last-message">Your clearance verification is complete.</p>
              </div>
              <div class="conversation-meta">
                <span class="clearance-badge">TS/SCI</span>
              </div>
            </div>

            <!-- Conversation Item 5 -->
            <div class="conversation-item">
              <div class="conversation-avatar">
                <div class="avatar" style="background: linear-gradient(135deg, #ec4899, #db2777);">DK</div>
              </div>
              <div class="conversation-content">
                <div class="conversation-header-row">
                  <span class="conversation-name">David Kim</span>
                  <span class="conversation-time">3w ago</span>
                </div>
                <span class="conversation-role">Career Advisor - CAG Advisory</span>
                <p class="conversation-last-message">I've reviewed your resume and have some suggestions.</p>
              </div>
            </div>

          </div>
        </div>

        <!-- Active Conversation -->
        <div class="active-conversation">

          <!-- Conversation Header -->
          <div class="conversation-top-header">
            <div class="conversation-header-info">
              <div class="header-left">
                <div class="header-avatar">
                  <div class="avatar" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">SM</div>
                  <div class="online-indicator"></div>
                </div>
                <div class="header-info">
                  <h3 class="header-name">Sarah Mitchell</h3>
                  <p class="header-role">HR Manager - Northrop Grumman</p>
                  <span class="header-status">Online</span>
                </div>
              </div>
            </div>
            <div class="header-actions">
              <button class="action-btn" id="btnVideoCall" title="Video Call">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="23 7 16 12 23 17 23 7"/>
                  <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
                </svg>
              </button>
              <button class="action-btn" id="btnVoiceCall" title="Voice Call">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </button>
              <button class="action-btn" title="More">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="1"/>
                  <circle cx="12" cy="5" r="1"/>
                  <circle cx="12" cy="19" r="1"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Messages Area -->
          <div class="messages-area">

            <!-- Date Separator -->
            <div class="date-separator">
              <span>Today</span>
            </div>

            <!-- Message 1 - Received -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">SM</div>
              </div>
              <div class="message-content">
                <div class="message-bubble">
                  <p>Hi! I saw your profile and think you'd be perfect for a Senior Security role we have open. Are you available for a quick call this week?</p>
                </div>
                <span class="message-time">9:18 PM</span>
              </div>
            </div>

            <!-- Message 2 - Sent -->
            <div class="message sent">
              <div class="message-content">
                <div class="message-bubble">
                  <p>Hi Sarah! Yes, I'd be very interested. I have availability on Wednesday or Thursday afternoon. What time works best for you?</p>
                </div>
                <div class="message-meta">
                  <span class="message-time">9:46 PM</span>
                  <svg class="read-receipt" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                    <polyline points="20 6 9 17 4 12" transform="translate(4, 0)"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Message 3 - Received -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">SM</div>
              </div>
              <div class="message-content">
                <div class="message-bubble">
                  <p>Perfect! How about Thursday at 2pm EST? I'll send you a calendar invite.</p>
                </div>
                <span class="message-time">10:48 PM</span>
              </div>
            </div>

            <!-- Typing Indicator -->
            <div class="message received">
              <div class="message-avatar">
                <div class="avatar-small" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">SM</div>
              </div>
              <div class="message-content">
                <div class="typing-indicator">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              </div>
            </div>

          </div>

          <!-- Message Input -->
          <div class="message-input-area">
            <div class="encryption-badge">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
              End-to-end encrypted
            </div>
            <div class="input-wrapper">
              <button class="input-action-btn" title="Attach file">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                </svg>
              </button>
              <button class="input-action-btn" title="Add emoji">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                  <line x1="9" y1="9" x2="9.01" y2="9"/>
                  <line x1="15" y1="9" x2="15.01" y2="9"/>
                </svg>
              </button>
              <input type="text" id="messageInput" class="message-input" placeholder="Type a message..." />
              <button id="sendButton" class="btn-send">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="22" y1="2" x2="11" y2="13"/>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"/>
                </svg>
                Send
              </button>
            </div>
          </div>

        </div>

      </div>
    </div>
  </section>

  <!-- Compose New Message Modal -->
  <div id="composeModal" class="compose-modal hidden">
    <div class="compose-modal-content">
      <div class="compose-header">
        <h3>New Message</h3>
        <button class="compose-close" id="btnCloseCompose">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>

      <div class="compose-body">
        <div class="compose-field">
          <label>To:</label>
          <select id="composeRecipient" class="compose-select">
            <option value="">Select a contact...</option>
          </select>
        </div>

        <div class="compose-field">
          <label>Message:</label>
          <textarea id="composeMessage" class="compose-textarea" placeholder="Type your message..."></textarea>
        </div>
      </div>

      <div class="compose-footer">
        <button class="btn-cancel" id="btnCancelCompose">Cancel</button>
        <button class="btn-send-compose" id="btnSendCompose">Send Message</button>
      </div>
    </div>
  </div>

  <!-- Video Call Modal (Picture-in-Picture) -->
  <div id="videoCallModal" class="video-call-modal hidden">
    <div class="video-call-window" id="videoCallWindow">
      <!-- Window Header -->
      <div class="video-call-header">
        <div class="call-info">
          <span class="caller-name">Sarah Mitchell</span>
          <span class="call-status" id="callStatus">Connecting...</span>
        </div>
        <div class="window-controls">
          <button class="window-btn" id="btnMinimize" title="Minimize">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
          </button>
          <button class="window-btn" id="btnMaximize" title="Maximize/Restore">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Video Area -->
      <div class="video-area">
        <!-- Remote Video (Fake - shows gradient with avatar) -->
        <div class="remote-video">
          <div class="video-placeholder">
            <div class="avatar-large" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
              SM
            </div>
            <p class="video-placeholder-text">Sarah Mitchell</p>
          </div>
        </div>

        <!-- Local Video (Your camera - small PIP) -->
        <div class="local-video">
          <div class="video-placeholder-small">
            <div class="avatar-medium" style="background: linear-gradient(135deg, #667eea, #764ba2);">
              YOU
            </div>
          </div>
        </div>

        <!-- Call Timer -->
        <div class="call-timer" id="callTimer">00:00</div>
      </div>

      <!-- Call Controls -->
      <div class="call-controls">
        <button class="call-btn call-btn-mute" id="btnMute" title="Mute">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/>
            <path d="M19 10v2a7 7 0 0 1-14 0v-2"/>
            <line x1="12" y1="19" x2="12" y2="23"/>
            <line x1="8" y1="23" x2="16" y2="23"/>
          </svg>
          <span>Mute</span>
        </button>

        <button class="call-btn call-btn-video" id="btnToggleVideo" title="Turn off camera">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="23 7 16 12 23 17 23 7"/>
            <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
          </svg>
          <span>Camera</span>
        </button>

        <button class="call-btn call-btn-end" id="btnEndCall" title="End call">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>End</span>
        </button>
      </div>
    </div>
  </div>

</Layout>

<!-- Messaging POC Script - Disabled for now (use static UI) -->
<!-- <script src="/js/messaging-poc.js" is:inline></script> -->

<script is:inline>
// Compose Modal & Video Call POC
let callTimer;
let callSeconds = 0;
let isMinimized = false;
let isMaximized = false;
let isDragging = false;
let currentX;
let currentY;
let initialX;
let initialY;
let xOffset = 0;
let yOffset = 0;

document.addEventListener('DOMContentLoaded', function() {
  // Compose Modal Elements
  const composeModal = document.getElementById('composeModal');
  const btnCompose = document.querySelector('.btn-compose-sidebar');
  const btnCloseCompose = document.getElementById('btnCloseCompose');
  const btnCancelCompose = document.getElementById('btnCancelCompose');
  const btnSendCompose = document.getElementById('btnSendCompose');
  const composeRecipient = document.getElementById('composeRecipient');
  const composeMessage = document.getElementById('composeMessage');

  // Video Call Elements
  const videoModal = document.getElementById('videoCallModal');
  const videoWindow = document.getElementById('videoCallWindow');
  const btnVideoCall = document.getElementById('btnVideoCall');
  const btnVoiceCall = document.getElementById('btnVoiceCall');
  const btnEndCall = document.getElementById('btnEndCall');
  const btnMinimize = document.getElementById('btnMinimize');
  const btnMaximize = document.getElementById('btnMaximize');
  const btnMute = document.getElementById('btnMute');
  const btnToggleVideo = document.getElementById('btnToggleVideo');
  const callStatus = document.getElementById('callStatus');
  const callTimerEl = document.getElementById('callTimer');

  // Populate compose modal with available users
  if (composeRecipient && typeof messaging !== 'undefined') {
    Object.values(messaging.users).forEach(function(user) {
      if (user.id !== messaging.currentUserId) {
        const option = document.createElement('option');
        option.value = user.id;
        option.textContent = user.name + ' - ' + user.role;
        composeRecipient.appendChild(option);
      }
    });
  }

  // Open Compose Modal
  if (btnCompose) {
    btnCompose.addEventListener('click', function() {
      composeModal.classList.remove('hidden');
      composeMessage.value = '';
      composeRecipient.value = '';
    });
  }

  // Close Compose Modal
  if (btnCloseCompose) {
    btnCloseCompose.addEventListener('click', function() {
      composeModal.classList.add('hidden');
    });
  }

  if (btnCancelCompose) {
    btnCancelCompose.addEventListener('click', function() {
      composeModal.classList.add('hidden');
    });
  }

  // Send from Compose Modal
  if (btnSendCompose) {
    btnSendCompose.addEventListener('click', function() {
      const recipientId = composeRecipient.value;
      const message = composeMessage.value.trim();

      if (!recipientId) {
        alert('Please select a recipient');
        return;
      }

      if (!message) {
        alert('Please enter a message');
        return;
      }

      if (typeof messaging !== 'undefined') {
        // Create or select conversation
        messaging.createConversation(recipientId);

        // Send message after short delay to let conversation switch
        setTimeout(function() {
          messaging.sendMessage(message);
          composeModal.classList.add('hidden');
        }, 100);
      }
    });
  }

  // Start Video Call
  if (btnVideoCall) {
    btnVideoCall.addEventListener('click', function() {
      startCall('video');
    });
  }

  // Start Voice Call
  if (btnVoiceCall) {
    btnVoiceCall.addEventListener('click', function() {
      startCall('voice');
    });
  }

  // End Call
  if (btnEndCall) {
    btnEndCall.addEventListener('click', function() {
      endCall();
    });
  }

  // Minimize
  if (btnMinimize) {
    btnMinimize.addEventListener('click', function() {
      toggleMinimize();
    });
  }

  // Maximize
  if (btnMaximize) {
    btnMaximize.addEventListener('click', function() {
      toggleMaximize();
    });
  }

  // Mute
  if (btnMute) {
    btnMute.addEventListener('click', function() {
      toggleMute();
    });
  }

  // Toggle Video
  if (btnToggleVideo) {
    btnToggleVideo.addEventListener('click', function() {
      toggleVideo();
    });
  }

  // Make window draggable
  if (videoWindow) {
    videoWindow.addEventListener('mousedown', dragStart);
    document.addEventListener('mousemove', drag);
    document.addEventListener('mouseup', dragEnd);
  }

  function startCall(type) {
    videoModal.classList.remove('hidden');
    videoWindow.classList.add('call-active');

    // Simulate connecting
    callStatus.textContent = 'Connecting...';

    setTimeout(function() {
      callStatus.textContent = 'Connected';
      startTimer();
    }, 2000);

    // Hide local video if voice call
    if (type === 'voice') {
      document.querySelector('.local-video').style.display = 'none';
      document.querySelector('.remote-video .video-placeholder-text').textContent = 'Voice Call';
    }
  }

  function endCall() {
    videoModal.classList.add('hidden');
    videoWindow.classList.remove('call-active', 'minimized', 'maximized');
    stopTimer();
    isMinimized = false;
    isMaximized = false;

    // Reset
    callStatus.textContent = 'Connecting...';
    document.querySelector('.local-video').style.display = 'block';
    btnMute.classList.remove('active');
    btnToggleVideo.classList.remove('active');
  }

  function toggleMinimize() {
    isMinimized = !isMinimized;
    if (isMinimized) {
      videoWindow.classList.add('minimized');
      videoWindow.classList.remove('maximized');
      isMaximized = false;
    } else {
      videoWindow.classList.remove('minimized');
    }
  }

  function toggleMaximize() {
    isMaximized = !isMaximized;
    if (isMaximized) {
      videoWindow.classList.add('maximized');
      videoWindow.classList.remove('minimized');
      isMinimized = false;
    } else {
      videoWindow.classList.remove('maximized');
    }
  }

  function toggleMute() {
    btnMute.classList.toggle('active');
    const span = btnMute.querySelector('span');
    if (btnMute.classList.contains('active')) {
      span.textContent = 'Unmute';
    } else {
      span.textContent = 'Mute';
    }
  }

  function toggleVideo() {
    btnToggleVideo.classList.toggle('active');
    const localVideo = document.querySelector('.local-video');
    const span = btnToggleVideo.querySelector('span');

    if (btnToggleVideo.classList.contains('active')) {
      localVideo.style.opacity = '0.3';
      span.textContent = 'Turn On';
    } else {
      localVideo.style.opacity = '1';
      span.textContent = 'Camera';
    }
  }

  function startTimer() {
    callSeconds = 0;
    callTimer = setInterval(function() {
      callSeconds++;
      const minutes = Math.floor(callSeconds / 60);
      const seconds = callSeconds % 60;
      callTimerEl.textContent =
        String(minutes).padStart(2, '0') + ':' +
        String(seconds).padStart(2, '0');
    }, 1000);
  }

  function stopTimer() {
    if (callTimer) {
      clearInterval(callTimer);
      callTimer = null;
      callSeconds = 0;
      callTimerEl.textContent = '00:00';
    }
  }

  // Draggable functionality
