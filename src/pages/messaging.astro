  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  pointer-events: none;
}

.video-call-modal.hidden {
  display: none;
}

.video-call-window {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 480px;
  height: 640px;
  background: #1a1a1a;
  border-radius: 16px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  pointer-events: all;
  transition: all 0.3s ease;
}

.video-call-window.minimized {
  width: 240px;
  height: 80px;
  top: auto;
  left: auto;
  bottom: 20px;
  right: 20px;
  transform: none;
}

.video-call-window.minimized .video-area,
.video-call-window.minimized .call-controls {
  display: none;
}

.video-call-window.maximized {
  width: 90vw;
  height: 90vh;
  max-width: 1200px;
  max-height: 800px;
}

