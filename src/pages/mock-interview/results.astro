<script is:inline>
  // Expand/collapse review cards
  document.querySelectorAll('.review-card.collapsed').forEach(function(card) {
    card.addEventListener('click', function() {
      card.classList.toggle('collapsed');
    });
  });

  // Toggle model answer visibility
  function toggleModelAnswer(index) {
    var answerSection = document.getElementById('modelAnswer' + index);
    var buttonText = document.getElementById('modelAnswerText' + index);

    if (answerSection.classList.contains('hidden')) {
      answerSection.classList.remove('hidden');
      buttonText.textContent = 'Hide Model Answer';
    } else {
      answerSection.classList.add('hidden');
      buttonText.textContent = 'View Model Answer';
    }
  }
</script>

