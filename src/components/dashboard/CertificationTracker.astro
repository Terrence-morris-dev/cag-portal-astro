<!-- Certification Tracker -->
<section class="section section-white">
    <div class="container">
        <div class="section-header-row">
            <h2 class="dashboard-section-title">Certification Tracker</h2>
            <a href="/certifications" class="btn-link-gold">+ Add Certification</a>
        </div>
        <div class="cert-tracker-grid">
            <div class="cert-card cert-status-good">
                <div class="cert-card-header">
                    <h3 class="cert-name">Security+ (CompTIA)</h3>
                    <span class="cert-status-badge status-good">Active</span>
                </div>
                <div class="cert-details">
                    <p class="cert-expires">Expires: March 15, 2026</p>
                    <p class="cert-days-left">482 days remaining</p>
                </div>
                <div class="cert-progress">
                    <div class="cert-progress-bar" style="width: 85%;"></div>
                </div>
            </div>
            <div class="cert-card cert-status-warning">
                <div class="cert-card-header">
                    <h3 class="cert-name">CISSP</h3>
                    <span class="cert-status-badge status-warning">Expiring Soon</span>
                </div>
                <div class="cert-details">
                    <p class="cert-expires">Expires: January 20, 2026</p>
                    <p class="cert-days-left">78 days remaining</p>
                </div>
                <div class="cert-progress">
                    <div class="cert-progress-bar warning" style="width: 25%;"></div>
                </div>
                <a href="/certifications" class="cert-renew-btn">Renew Now</a>
            </div>
            <div class="cert-card cert-status-good">
                <div class="cert-card-header">
                    <h3 class="cert-name">AWS Solutions Architect</h3>
                    <span class="cert-status-badge status-good">Active</span>
                </div>
                <div class="cert-details">
                    <p class="cert-expires">Expires: July 8, 2026</p>
                    <p class="cert-days-left">597 days remaining</p>
                </div>
                <div class="cert-progress">
                    <div class="cert-progress-bar" style="width: 90%;"></div>
                </div>
            </div>
        </div>
    </div>
</section>
