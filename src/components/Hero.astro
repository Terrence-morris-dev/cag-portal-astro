---
// Hero section for CAG homepage
---

<section class="bg-gradient-to-br from-navy via-navy-dark to-navy-light py-20">
  <div class="max-w-7xl mx-auto px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Hero Content -->
      <div class="text-white">
        <div class="text-gold text-sm font-bold tracking-widest uppercase mb-4">
          CLEARED ADVISORY GROUP
        </div>
        <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
          Your Security Clearance Opens Doors to <span class="text-gold">Opportunity</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Connect with secure, high-impact IT opportunities across defense, intelligence, and federal contracting sectors.
        </p>
        <div class="flex gap-4">
          <a href="/jobs" class="bg-gold text-navy px-8 py-3 rounded-md font-bold hover:bg-gold-light transition-all duration-300">
            Explore Careers
          </a>
          <a href="/register" class="border-2 border-white text-white px-8 py-3 rounded-md font-semibold hover:bg-white hover:text-navy transition-all duration-300">
            Join the Network
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-gold/20 to-clearance-secret/20 rounded-2xl blur-3xl"></div>
        <img
          src="/images/hero/hero-image.png"
          alt="Professional cleared IT specialist"
          class="relative rounded-2xl shadow-2xl"
        />
      </div>
    </div>

    <!-- Stats Bar -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-12 border-t border-white/10">
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-gold mb-2">500+</div>
        <div class="text-gray-400 text-sm uppercase tracking-wide">Professionals<br/>Placed</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-gold mb-2">200+</div>
        <div class="text-gray-400 text-sm uppercase tracking-wide">Active<br/>Positions</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-gold mb-2">98%</div>
        <div class="text-gray-400 text-sm uppercase tracking-wide">Client<br/>Satisfaction</div>
      </div>
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-bold text-gold mb-2">ALL<br/>LEVELS</div>
        <div class="text-gray-400 text-sm uppercase tracking-wide">Confidential to<br/>TS/SCI</div>
      </div>
    </div>
  </div>
</section>
