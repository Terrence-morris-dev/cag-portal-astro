---
// Hero section for CAG homepage
---

<section class="bg-gradient-to-br from-navy via-navy-dark to-navy-light py-20">
  <div class="max-w-7xl mx-auto px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Hero Content -->
      <div class="text-white">
        <div class="text-gold text-sm font-bold tracking-widest uppercase mb-4">
          CLEARED ADVISORY GROUP
        </div>
        <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
          Your Security Clearance Opens Doors to <span class="text-gold">Opportunity</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Connect with secure, high-impact IT opportunities across defense, intelligence, and federal contracting sectors.
        </p>
        <div class="flex gap-4">
          <a href="/jobs" class="bg-gold text-navy px-8 py-4 rounded-lg font-bold hover:bg-gold-light transition-all duration-300 transform hover:scale-105">
            Browse Opportunities
          </a>
          <a href="/about" class="border-2 border-white text-white px-8 py-4 rounded-lg font-bold hover:bg-white hover:text-navy transition-all duration-300">
            Learn More
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-gold/20 to-clearance-secret/20 rounded-2xl blur-3xl"></div>
        <img
          src="/images/hero/hero-image.png"
          alt="Professional cleared IT specialist"
          class="relative rounded-2xl shadow-2xl"
        />
      </div>
    </div>

    <!-- Stats Bar -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-12 border-t border-white/10">
      <div class="text-center">
        <div class="text-4xl font-bold text-gold mb-2">500+</div>
        <div class="text-gray-400">Active Opportunities</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-gold mb-2">1,200+</div>
        <div class="text-gray-400">Cleared Professionals</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-gold mb-2">95%</div>
        <div class="text-gray-400">Placement Success</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-gold mb-2">$120K+</div>
        <div class="text-gray-400">Average Salary</div>
      </div>
    </div>
  </div>
</section>
