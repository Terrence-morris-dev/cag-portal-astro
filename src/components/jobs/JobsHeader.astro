<!-- Jobs Header -->
<section class="jobs-header">
    <div class="container">
        <h1 class="jobs-header-title">Find Your Next Cleared Opportunity</h1>
        <p class="jobs-header-subtitle">Access exclusive security-cleared positions from top defense contractors</p>

        <div class="jobs-search-bar">
            <div class="search-input-wrapper">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" placeholder="Search by job title, company, or keyword..." class="jobs-search-input">
            </div>
            <button class="jobs-search-btn">Search Jobs</button>
        </div>

        <div class="jobs-quick-stats">
            <div class="quick-stat">
                <span class="quick-stat-number">200+</span>
                <span class="quick-stat-label">Active Positions</span>
            </div>
            <div class="quick-stat">
                <span class="quick-stat-number">50+</span>
                <span class="quick-stat-label">Hiring Companies</span>
            </div>
            <div class="quick-stat">
                <span class="quick-stat-number">New</span>
                <span class="quick-stat-label">Posted Daily</span>
            </div>
        </div>
    </div>
</section>
