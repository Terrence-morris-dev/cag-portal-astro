<!-- Job Filters Sidebar -->
<aside class="job-filters">
    <div class="filter-header">
        <h3 class="filter-title">Filters</h3>
        <button class="filter-clear">Clear All</button>
    </div>

    <!-- Clearance Level Filter -->
    <div class="filter-group">
        <h4 class="filter-group-title">Clearance Level</h4>
        <label class="filter-checkbox">
            <input type="checkbox" name="clearance" value="secret">
            <span class="checkbox-label">Secret</span>
            <span class="checkbox-count">(45)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="clearance" value="ts">
            <span class="checkbox-label">Top Secret</span>
            <span class="checkbox-count">(62)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="clearance" value="ts-sci">
            <span class="checkbox-label">TS/SCI</span>
            <span class="checkbox-count">(78)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="clearance" value="q">
            <span class="checkbox-label">Q Clearance</span>
            <span class="checkbox-count">(15)</span>
        </label>
    </div>

    <!-- Location Filter -->
    <div class="filter-group">
        <h4 class="filter-group-title">Location</h4>
        <label class="filter-checkbox">
            <input type="checkbox" name="location" value="va">
            <span class="checkbox-label">Virginia</span>
            <span class="checkbox-count">(95)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="location" value="md">
            <span class="checkbox-label">Maryland</span>
            <span class="checkbox-count">(68)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="location" value="dc">
            <span class="checkbox-label">Washington DC</span>
            <span class="checkbox-count">(42)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="location" value="remote">
            <span class="checkbox-label">Remote</span>
            <span class="checkbox-count">(23)</span>
        </label>
    </div>

    <!-- Salary Range Filter -->
    <div class="filter-group">
        <h4 class="filter-group-title">Salary Range</h4>
        <label class="filter-checkbox">
            <input type="checkbox" name="salary" value="80-100">
            <span class="checkbox-label">$80k - $100k</span>
            <span class="checkbox-count">(28)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="salary" value="100-130">
            <span class="checkbox-label">$100k - $130k</span>
            <span class="checkbox-count">(52)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="salary" value="130-160">
            <span class="checkbox-label">$130k - $160k</span>
            <span class="checkbox-count">(67)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="salary" value="160+">
            <span class="checkbox-label">$160k+</span>
            <span class="checkbox-count">(53)</span>
        </label>
    </div>

    <!-- Job Type Filter -->
    <div class="filter-group">
        <h4 class="filter-group-title">Job Type</h4>
        <label class="filter-checkbox">
            <input type="checkbox" name="type" value="full-time">
            <span class="checkbox-label">Full-time</span>
            <span class="checkbox-count">(165)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="type" value="contract">
            <span class="checkbox-label">Contract</span>
            <span class="checkbox-count">(32)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="type" value="part-time">
            <span class="checkbox-label">Part-time</span>
            <span class="checkbox-count">(3)</span>
        </label>
    </div>

    <!-- Experience Level Filter -->
    <div class="filter-group">
        <h4 class="filter-group-title">Experience Level</h4>
        <label class="filter-checkbox">
            <input type="checkbox" name="experience" value="entry">
            <span class="checkbox-label">Entry Level</span>
            <span class="checkbox-count">(18)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="experience" value="mid">
            <span class="checkbox-label">Mid-Level</span>
            <span class="checkbox-count">(92)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="experience" value="senior">
            <span class="checkbox-label">Senior</span>
            <span class="checkbox-count">(78)</span>
        </label>
        <label class="filter-checkbox">
            <input type="checkbox" name="experience" value="lead">
            <span class="checkbox-label">Lead/Principal</span>
            <span class="checkbox-count">(12)</span>
        </label>
    </div>
</aside>
