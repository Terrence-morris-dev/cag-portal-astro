<!-- Practice Modes -->
<section class="section section-gray">
    <div class="container">
        <div class="section-header">
            <span class="section-eyebrow">HOW TO PRACTICE</span>
            <h2 class="section-title">Choose Your Practice Mode</h2>
            <p class="section-description">Multiple ways to prepare for your defense contractor interview</p>
        </div>

        <div class="practice-modes-grid">
            <!-- Mock Interview -->
            <div class="practice-mode-card featured">
                <div class="featured-badge">Most Popular</div>
                <div class="mode-icon" style="background: linear-gradient(135deg, var(--gold), #f4c542);">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/>
                        <path d="M19 10v2a7 7 0 0 1-14 0v-2"/>
                        <line x1="12" y1="19" x2="12" y2="23"/>
                        <line x1="8" y1="23" x2="16" y2="23"/>
                    </svg>
                </div>
                <h3 class="mode-title">AI Mock Interview</h3>
                <p class="mode-description">Simulate a real interview with AI-powered feedback and scoring.</p>
                <ul class="mode-features">
                    <li>✓ AI feedback analysis</li>
                    <li>✓ 5-point scoring system</li>
                    <li>✓ Performance insights</li>
                    <li>✓ Detailed improvement tips</li>
                </ul>
                <button class="btn-mode btn-mode-primary" onclick="window.location.href='/mock-interview'">Start Mock Interview</button>
            </div>

            <!-- Quick Practice -->
            <div class="practice-mode-card">
                <div class="mode-icon" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                    </svg>
                </div>
                <h3 class="mode-title">Quick Practice</h3>
                <p class="mode-description">Get 15 random questions from any category. Perfect for quick study sessions.</p>
                <ul class="mode-features">
                    <li>✓ 15 randomized questions</li>
                    <li>✓ Instant answers</li>
                    <li>✓ Timed or untimed</li>
                    <li>✓ Track your progress</li>
                </ul>
                <button class="btn-mode" id="btnQuickPractice">Start Quick Practice</button>
            </div>

            <!-- Study Mode -->
            <div class="practice-mode-card">
                <div class="mode-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                    </svg>
                </div>
                <h3 class="mode-title">Study Mode</h3>
                <p class="mode-description">Browse all questions at your own pace. Filter by category and difficulty.</p>
                <ul class="mode-features">
                    <li>✓ Browse 334 questions</li>
                    <li>✓ Filter by category</li>
                    <li>✓ View model answers</li>
                    <li>✓ Study at your pace</li>
                </ul>
                <button class="btn-mode" id="btnBrowseQuestions">Browse Questions</button>
            </div>

            <!-- Performance Tracking -->
            <div class="practice-mode-card">
                <div class="mode-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="20" x2="18" y2="10"/>
                        <line x1="12" y1="20" x2="12" y2="4"/>
                        <line x1="6" y1="20" x2="6" y2="14"/>
                    </svg>
                </div>
                <h3 class="mode-title">Performance Tracking</h3>
                <p class="mode-description">Monitor your progress and identify areas for improvement.</p>
                <ul class="mode-features">
                    <li>✓ Track practice history</li>
                    <li>✓ Score analytics</li>
                    <li>✓ Weak area identification</li>
                    <li>✓ Progress charts</li>
                </ul>
                <button class="btn-mode" id="btnViewPerformance">View Performance</button>
            </div>
        </div>
    </div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Quick Practice Button - 15 random questions, mixed difficulty, untimed
    const btnQuickPractice = document.getElementById('btnQuickPractice');
    if (btnQuickPractice) {
      btnQuickPractice.addEventListener('click', function() {
        const config = {
          category: 'helpdesk', // Default to helpdesk, will randomize from all
          difficulty: 'mixed',
          questionCount: '15',
          mode: 'untimed'
        };
        sessionStorage.setItem('mockInterviewConfig', JSON.stringify(config));
        window.location.href = '/mock-interview/active';
      });
    }

    // Browse Questions Button
    const btnBrowseQuestions = document.getElementById('btnBrowseQuestions');
    if (btnBrowseQuestions) {
      btnBrowseQuestions.addEventListener('click', function() {
        window.location.href = '/browse-questions';
      });
    }

    // View Performance Button
    const btnViewPerformance = document.getElementById('btnViewPerformance');
    if (btnViewPerformance) {
      btnViewPerformance.addEventListener('click', function() {
        window.location.href = '/performance';
      });
    }
  });
</script>

