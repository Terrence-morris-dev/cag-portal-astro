<!-- Active Certifications Dashboard -->
<section class="section section-white">
    <div class="container">
        <div class="section-header-row">
            <h2 class="dashboard-section-title">Your Active Certifications</h2>
            <button class="btn-add-cert">+ Add Certification</button>
        </div>

        <div class="active-certs-grid">
            <!-- Cert Card 1 - Good Status -->
            <div class="active-cert-card status-good">
                <div class="active-cert-header">
                    <div class="cert-badge-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                    <div class="cert-info-header">
                        <h3 class="active-cert-name">Security+ (CompTIA)</h3>
                        <span class="cert-badge status-active">Active</span>
                    </div>
                </div>
                <div class="active-cert-details">
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Certification Number:</span>
                        <span class="cert-detail-value">COMP001234567</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Issue Date:</span>
                        <span class="cert-detail-value">March 15, 2023</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Expiration Date:</span>
                        <span class="cert-detail-value">March 15, 2026</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Days Remaining:</span>
                        <span class="cert-detail-value cert-days-good">482 days</span>
                    </div>
                </div>
                <div class="cert-progress-section">
                    <div class="cert-progress-bar-wrapper">
                        <div class="cert-progress-bar good" style="width: 85%;"></div>
                    </div>
                    <span class="cert-progress-text">Valid for 15 more months</span>
                </div>
                <div class="active-cert-actions">
                    <button class="btn-cert-action secondary">View Certificate</button>
                    <button class="btn-cert-action primary">Renew Now</button>
                </div>
            </div>

            <!-- Cert Card 2 - Warning Status -->
            <div class="active-cert-card status-warning">
                <div class="active-cert-header">
                    <div class="cert-badge-icon warning">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                    <div class="cert-info-header">
                        <h3 class="active-cert-name">CISSP</h3>
                        <span class="cert-badge status-expiring">Expiring Soon</span>
                    </div>
                </div>
                <div class="active-cert-details">
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Certification Number:</span>
                        <span class="cert-detail-value">CISSP-987654</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Issue Date:</span>
                        <span class="cert-detail-value">January 20, 2023</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Expiration Date:</span>
                        <span class="cert-detail-value">January 20, 2026</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Days Remaining:</span>
                        <span class="cert-detail-value cert-days-warning">78 days</span>
                    </div>
                </div>
                <div class="cert-progress-section">
                    <div class="cert-progress-bar-wrapper">
                        <div class="cert-progress-bar warning" style="width: 25%;"></div>
                    </div>
                    <span class="cert-progress-text">Renewal required in 2.5 months</span>
                </div>
                <div class="cert-alert">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    <span>Action required: Start renewal process</span>
                </div>
                <div class="active-cert-actions">
                    <button class="btn-cert-action secondary">View Certificate</button>
                    <button class="btn-cert-action primary urgent">Renew Now</button>
                </div>
            </div>

            <!-- Cert Card 3 - Good Status -->
            <div class="active-cert-card status-good">
                <div class="active-cert-header">
                    <div class="cert-badge-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                    <div class="cert-info-header">
                        <h3 class="active-cert-name">AWS Solutions Architect - Associate</h3>
                        <span class="cert-badge status-active">Active</span>
                    </div>
                </div>
                <div class="active-cert-details">
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Certification Number:</span>
                        <span class="cert-detail-value">AWS-SAA-C03-12345</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Issue Date:</span>
                        <span class="cert-detail-value">July 8, 2023</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Expiration Date:</span>
                        <span class="cert-detail-value">July 8, 2026</span>
                    </div>
                    <div class="cert-detail-row">
                        <span class="cert-detail-label">Days Remaining:</span>
                        <span class="cert-detail-value cert-days-good">597 days</span>
                    </div>
                </div>
                <div class="cert-progress-section">
                    <div class="cert-progress-bar-wrapper">
                        <div class="cert-progress-bar good" style="width: 90%;"></div>
                    </div>
                    <span class="cert-progress-text">Valid for 19 more months</span>
                </div>
                <div class="active-cert-actions">
                    <button class="btn-cert-action secondary">View Certificate</button>
                    <button class="btn-cert-action primary">Renew Now</button>
                </div>
            </div>
        </div>
    </div>
</section>
