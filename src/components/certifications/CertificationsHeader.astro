        <div class="cert-overview-stats">
            <div class="cert-overview-card">
                <div class="cert-overview-icon active">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                </div>
                <div class="cert-overview-content">
                    <span class="cert-overview-number">5</span>
                    <span class="cert-overview-label">Active Certifications</span>
                </div>
            </div>
            <div class="cert-overview-card">
                <div class="cert-overview-icon warning">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
