<style>
.settings-section {
    padding: 3rem 0;
    background: #f8f9fb;
    min-height: calc(100vh - 400px);
}

.settings-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
}

/* Sidebar Navigation */
.settings-sidebar {
    position: sticky;
    top: 2rem;
    height: fit-content;
}

.settings-nav {
    background: var(--white);
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem 0;
}

.settings-nav-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    color: #6b7280;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    border-left: 3px solid transparent;
}

.settings-nav-item:hover {
    background: #f8f9fb;
    color: var(--navy);
}

.settings-nav-item.active {
    background: rgba(212, 175, 55, 0.1);
    color: var(--navy);
    border-left-color: var(--gold);
}

.settings-nav-item svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
}

/* Main Content */
.settings-main {
    max-width: 900px;
}

.settings-content-section {
    display: none;
}

.settings-content-section.active {
    display: block;
}

.section-heading {
    font-size: 2rem;
    font-weight: 700;
    color: var(--navy);
    margin-bottom: 2rem;
}

.settings-card {
    background: var(--white);
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--navy);
    margin-bottom: 1.5rem;
}

/* Form Elements */
.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group.full-width {
    grid-column: 1 / -1;
}

.form-group label {
    font-weight: 600;
    color: var(--navy);
    font-size: 0.9rem;
}

.form-input {
    padding: 0.75rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s;
    font-family: inherit;
}

.form-input:focus {
    outline: none;
    border-color: var(--gold);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

textarea.form-input {
    resize: vertical;
}

/* Buttons */
.btn-save,
.btn-secondary,
.btn-danger,
.btn-revoke,
.btn-text {
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s;
    border: none;
}

.btn-save {
    background: linear-gradient(135deg, var(--gold), #f4c542);
    color: var(--navy);
}

.btn-save:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
}

.btn-secondary {
    background: var(--white);
    color: var(--navy);
    border: 2px solid var(--navy);
}

.btn-secondary:hover {
    background: var(--navy);
    color: var(--white);
}

.btn-danger {
    background: #dc2626;
    color: var(--white);
}

.btn-danger:hover {
    background: #b91c1c;
}

.btn-revoke {
    background: transparent;
    color: #dc2626;
    border: 1px solid #dc2626;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
}

.btn-text {
    background: transparent;
    color: #6b7280;
    text-decoration: underline;
}

/* Toggle Switch */
.toggle-setting {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-bottom: 1px solid #e5e7eb;
}

.toggle-setting:last-child {
    border-bottom: none;
}

.toggle-info strong {
    display: block;
    color: var(--navy);
    font-size: 1rem;
    margin-bottom: 0.25rem;
}

.toggle-info p {
    color: #6b7280;
    font-size: 0.9rem;
    margin: 0;
}

.toggle-switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 28px;
    flex-shrink: 0;
}

.toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #cbd5e1;
    transition: 0.4s;
    border-radius: 28px;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 4px;
    bottom: 4px;
    background: white;
    transition: 0.4s;
    border-radius: 50%;
}

.toggle-switch input:checked + .toggle-slider {
    background: var(--gold);
}

.toggle-switch input:checked + .toggle-slider:before {
    transform: translateX(22px);
}

.toggle-list {
    display: flex;
    flex-direction: column;
}

/* Alerts */
.alert-info,
.alert-warning {
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
    font-size: 0.9rem;
}

.alert-info {
    background: #dbeafe;
    color: #1e40af;
    border: 1px solid #93c5fd;
}

.alert-warning {
    background: #fef3c7;
    color: #92400e;
    border: 1px solid #fcd34d;
}

/* Sessions */
.session-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.session-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: #f8f9fb;
    border-radius: 8px;
}

.session-info strong {
    display: block;
    color: var(--navy);
    margin-bottom: 0.25rem;
}

.session-info p {
    color: #6b7280;
    font-size: 0.9rem;
    margin: 0 0 0.25rem 0;
}

.session-time {
    color: #9ca3af;
    font-size: 0.85rem;
}

.session-badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
}

.session-badge.current {
    background: #dcfce7;
    color: #059669;
}

/* Plan Info */
.plan-info {
    border: 2px solid var(--gold);
    border-radius: 12px;
    padding: 2rem;
}

.plan-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.plan-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--navy);
    margin: 0 0 0.5rem 0;
}

.plan-price {
    font-size: 1.25rem;
    color: #6b7280;
    margin: 0;
}

.plan-badge {
    padding: 0.5rem 1rem;
    background: #dcfce7;
    color: #059669;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
}

.plan-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
}

.plan-features li {
    padding: 0.5rem 0;
    color: #374151;
    position: relative;
    padding-left: 1.75rem;
}

.plan-features li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: var(--gold);
    border-radius: 50%;
}

